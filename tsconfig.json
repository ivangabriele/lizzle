{
  "extends": "@ivangabriele/tsconfig-next/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "importsNotUsedAsValues": "error",
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@backend/*": ["backend/*"],
      "@common/*": ["common/*"],
      "@frontend/*": ["frontend/*"],
      "@prisma/*": ["prisma/*"]
    }
  },
  "include": ["**/*.cjs", "**/*.js", "**/*.ts", "**/*.tsx", "next-env.d.ts"],
  "exclude": [".next/*", ".yarn/*", "config/*", "node_modules/*", "prisma/generations/*"]
}
